<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Employee Management</title>

    <!-- Bootstrap 3.4.1 -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

    <!-- jQuery first, then Bootstrap JS (no need for Popper.js in Bootstrap 3) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    <style>
        /* Custom styles */
        .table td, .table th {
            vertical-align: middle;
        }

        .btn {
            margin: 5px 0;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <partial name="Notification"></partial>

        <!-- Add Employee Button -->
        <div class="mb-3">
            <a asp-controller="Employee" asp-action="AddEmp" class="btn btn-primary">Add Emp</a>
        </div>

        <!-- Table displaying employees -->
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Salary</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var d in Model)
                {
                    <tr>
                        <td>@d.eid</td>
                        <td>@d.ename</td>
                        <td>@d.email</td>
                        <td>@d.salary</td>
                        <td>
                            <!-- Delete Button -->
                            <a asp-controller="Employee" asp-action="DeleteEmp" asp-route-id="@d.eid"
                               onclick="return confirm('Are you sure you want to delete?')" class="btn btn-danger btn-sm">Delete</a>
                            <!-- Edit Button -->
                            <a asp-controller="Employee" asp-action="EditEmp" asp-route-id="@d.eid" class="btn btn-success btn-sm">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</body>
</html>
